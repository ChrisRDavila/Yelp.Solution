@{
  Layout = "_Layout";
}

@model Yelp.Models.Restaurant

<h2>Edit</h2>

<h4>Edit this restaurant @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RestaurantId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @Html.LabelFor(model => model.Address)
  @Html.EditorFor(model => model.Address)
  @Html.LabelFor(model => model.Hours)
  @Html.EditorFor(model => model.Hours)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>