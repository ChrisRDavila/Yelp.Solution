@{
  Layout = "_Layout";
}

@model Yelp.Models.Restaurant

<h4>Add a new restaurant</h4>

<p><strong>NOTE:</strong> You need to have at least one cuisine before you can add an restaurant!</p>
<p>Go to @Html.ActionLink("this page", "Create", "Cuisines") to create a cuisine.</p>

<div id="spacing" class="spacing">
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, "Name:")
  @Html.TextBoxFor(model => model.Name)
  <br/>
  @Html.LabelFor(model => model.Address, "Address:")
  @Html.TextBoxFor(model => model.Address)
  <br/>
  @Html.LabelFor(model => model.Hours, "Hours :")
  @Html.TextBoxFor(model => model.Hours)
  <br/>
  <br/>
  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" value="Add new restaurant" class="btn btn-outline-success" />
}
</div>
<p>@Html.ActionLink("Show all restaurants", "Index")</p>